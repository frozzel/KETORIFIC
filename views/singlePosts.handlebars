<body>
    


<div class="row g-0 text-center" id="singlePosts">

  
<div class="col-sm-8 col-md-8">


<div class="card mb-3" style="max-width: 100%; height: 100%">
  <div class="row g-0">
    <div class="col-md-12">
      <img src="{{posts.image}}" class="img-fluid rounded" alt="...">
    </div>
    <div class="col-md-12">
      <div class="card-body">
        <h5 class="card-title">{{posts.title}}</h5>
        <p class="card-text">{{posts.description}}</p>
        <p class="card-text"><small class="text-muted">Posted by {{posts.user.email}} on {{format_date posts.createdAt}}</small></p>
      </div>
     {{#if posts.Comments}}
    <section class="card">
      <div class="card-header">
        <h3>Comments</h3>
      </div>

      <div class="card-body">
        {{#each posts.Comments}}
          <div>
            <p>
              {{body}}
            </p>
            <p class="card-text"><small class="text-muted">Posted by {{user.email}} on {{format_date createdAt}}</small></p>
            <p>
              &mdash; {{user.email}} {{format_date createdAt}}
            </p>
          </div>
        {{/each}}
      </div>
    </section>
  {{/if}}

  <form id="newcomment" class="card">
    <div class="card-header">
      <h3>Add Comment</h3>
    </div>

    <div class="card-body">
      <input type="hidden" name="posts_id" value="{{posts.id}}" />

      <label class="form-label" for="comment-body">Comment:</label>
<br>
      <textarea name="comment-body" class="form-input"></textarea>
<br>
      <button type="submit" class="btn">Submit</button>
    </div>
  </form>
</div>


